<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/x2"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_picture" />

    <ImageView
        android:id="@+id/iv_dongtu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_picture"
        android:layout_alignRight="@id/iv_picture"
        android:src="@drawable/icon_gif_tag"
        android:visibility="gone" />


</RelativeLayout>
